{
  "name": "drake-gpu-gui-ubuntu22",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "runArgs": [
    "--gpus=all",
    "--ipc=host",
    "--shm-size=2g",
    "--env=DISPLAY=${localEnv:DISPLAY}",
    "--env=XAUTHORITY=/tmp/.Xauthority",
    "--env=NVIDIA_VISIBLE_DEVICES=all",
    "--env=NVIDIA_DRIVER_CAPABILITIES=compute,utility,graphics,display",
    "--volume=/tmp/.X11-unix:/tmp/.X11-unix:rw",
    "--volume=${localEnv:XAUTHORITY}:/tmp/.Xauthority:ro"
  ],
  "containerEnv": {
    "PYTHONUNBUFFERED": "1",
    "PIP_DISABLE_PIP_VERSION_CHECK": "1",
    "__GLX_VENDOR_LIBRARY_NAME": "nvidia"
  },
  // Automatically update the container user's UID/GID to match the host user
  // This prevents permission issues with mounted volumes (e.g., SSH keys)
  "updateRemoteUserUID": true,
  "remoteUser": "vscode",
  "features": {
    // Standard utilities (Bash, zip, sudo support, etc.)
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": false,
      "username": "vscode",
      "userUid": "1000",
      "userGid": "1000",
      "upgradePackages": false
    },
    // Ensure SSH agent forwarding works if keys aren't mounted directly
    "ghcr.io/devcontainers/features/sshd:1": {
      "version": "latest"
    }
  },
  "mounts": [
    // Mount the host SSH keys securely
    "type=bind,source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,readonly,consistency=cached"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-python.vscode-pylance",
        "GitHub.copilot",
        "GitHub.vscode-pull-request-github",
        "GitHub.copilot-chat",
        "eamodio.gitlens",
        "njpwerner.autodocstring",
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "llvm-vs-code-extensions.vscode-clangd",
        "twxs.cmake"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/home/vscode/.venv/bin/python",
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "editor.rulers": [
          88,
          100
        ],
        "editor.bracketPairColorization.enabled": true,
        "terminal.integrated.defaultProfile.linux": "bash",
        "files.trimTrailingWhitespace": true,
        "cmake.configureOnOpen": true,
        "cmake.generator": "Ninja",
        "cmake.configureSettings": {
          "CMAKE_PREFIX_PATH": "/opt/drake"
        }
      }
    }
  },
  "postCreateCommand": "bash .devcontainer/postCreateCommand.sh"
}